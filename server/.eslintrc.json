{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "airbnb-typescript/base", "plugin:workspaces/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "project": ["./tsconfig.json"],
    "tsconfigRootDir": "server"
  },
  "plugins": ["@typescript-eslint", "workspaces"],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts"]
      }
    }
  },
  "rules": {
    "no-console": "off",
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "linebreak-style": "off",
    "import/extensions": "off",
    "class-methods-use-this": "off",
    "workspaces/no-absolute-imports": "off"
  }
}
